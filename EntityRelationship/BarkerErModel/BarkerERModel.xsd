	targetNamespace="http://schemas.neumont.edu/ORM/EntityRelationship/2008-03/Barker"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:rbe="http://schemas.neumont.edu/ORM/EntityRelationship/2008-03/Barker"
	xmlns="http://schemas.neumont.edu/ORM/EntityRelationship/2008-03/Barker"
	elementFormDefault="qualified"
	attributeFormDefault="unqualified"
	version="0.9">
