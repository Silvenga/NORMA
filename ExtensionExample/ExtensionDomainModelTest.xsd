			the terms of this license.

			You must not remove this notice, or any other, from this software.
		</xs:appinfo>
	</xs:annotation>

	<xs:element name="SampleElement">
		<xs:complexType>
			<xs:sequence />
			<xs:attribute name="TestProperty" type="xs:string" />
			<xs:attribute name="id" type="xs:ID" />
			<xs:attribute name="CustomEnum" type="TestEnumeration" />
		</xs:complexType>
	</xs:element>
	<xs:simpleType name="TestEnumeration">
		<xs:restriction base="xs:string">
			<xs:enumeration value="None" />
			<xs:enumeration value="One" />
			<xs:enumeration value="Two" />
			<xs:enumeration value="Three" />
		</xs:restriction>
	</xs:simpleType>

	<xs:element name="FactTypeRequiresMeaningfulNameError" type="FactTypeRequiresMeaningfulNameErrorType" substitutionGroup="orm:ExtensionModelError"/>
	<xs:complexType name="FactTypeRequiresMeaningfulNameErrorType">
		<xs:complexContent>
			<xs:extension base="orm:ModelError">
				<xs:sequence>
					<xs:element name="Fact" type="orm:FactRef" />
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

</xs:schema>
