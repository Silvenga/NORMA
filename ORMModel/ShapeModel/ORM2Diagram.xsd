	<xs:element name="ORMDiagram" type="ORMDiagram"/>
	<xs:complexType name="ORMDiagram">
		<xs:sequence>
			<xs:element name="Shapes" minOccurs="0">
				<xs:complexType>
					<xs:choice minOccurs="0" maxOccurs="unbounded">
						<xs:element name="ObjectTypeShape" type="ObjectTypeShape" minOccurs="0" maxOccurs="unbounded" />
						<xs:element name="FactTypeShape" type="FactTypeShape" minOccurs="0" maxOccurs="unbounded" />
						<xs:element name="ExternalConstraintShape" type="ExternalConstraintShape" minOccurs="0" maxOccurs="unbounded" />
						<xs:element name="FrequencyConstraintShape" type="FrequencyConstraintShape" minOccurs="0" maxOccurs="unbounded" />
						<xs:element name="RingConstraintShape" type="RingConstraintShape" minOccurs="0" maxOccurs="unbounded" />
						<xs:element name="ModelNoteShape" type="ModelNoteShape" minOccurs="0" maxOccurs="unbounded" />
					</xs:choice>
				</xs:complexType>
			</xs:element>
			<xs:element name="Subject" type="SubjectRef"/>
		</xs:sequence>
		<xs:attribute name="id" type="xs:ID" use="required" />
		<xs:attribute name="IsCompleteView" type="xs:boolean" use="required" />
		<xs:attribute name="Name" type="xs:string" use="required" />
		<xs:attribute name="BaseFontName" type="xs:string" use="required" />
		<xs:attribute name="BaseFontSize" type="xs:decimal" use="required" />
		<xs:attribute name="AutoPopulateShapes" type="xs:boolean" default="false">
			<xs:annotation>
				<xs:documentation>If this is set to true, then all shapes in the model will be loaded onto this diagram when the diagram is first loaded. AutoPopulateShapes is never written, but is useful for importing models with no diagram information.</xs:documentation>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>
	<xs:complexType name="Shape" abstract="true">
		<xs:attribute name="id" type="xs:ID" use="required" />
		<xs:attribute name="IsExpanded" type="xs:boolean" />
		<xs:attribute name="AbsoluteBounds" type="xs:string"  />
	</xs:complexType>
	<xs:complexType name="ObjectTypeShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="RelativeShapes" minOccurs="0">
						<xs:complexType>
							<xs:sequence >
								<xs:element name="ValueConstraintShape" type="ValueConstraintShape" minOccurs="0"  maxOccurs="unbounded" />
							</xs:sequence>
						</xs:complexType>
					</xs:element>
					<xs:element name="Subject" type="SubjectRef"/>
				</xs:sequence>
				<xs:attribute name="ExpandRefMode" type="xs:boolean" default="false" />
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="FactTypeShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="RelativeShapes" minOccurs="0"  maxOccurs="unbounded">
						<xs:complexType>
							<xs:choice minOccurs="0" maxOccurs="unbounded">
								<xs:element name="ObjectifiedFactTypeNameShape" type="ObjectTypeShape"/>
								<xs:element name="ReadingShape" type="ReadingShape"/>
								<xs:element name="ValueConstraintShape" type="ValueConstraintShape"/>
								<xs:element name="RoleNameShape" type="RoleNameShape"/>
							</xs:choice>
						</xs:complexType>
					</xs:element>
					<xs:element name="Subject" type="SubjectRef"/>
					<xs:element name="RoleDisplayOrder" minOccurs="0">
						<xs:complexType>
							<xs:choice minOccurs="0" maxOccurs="unbounded">
								<xs:element name="Role">
									<xs:complexType>
										<xs:attribute name="ref" type="xs:IDREF"/>
									</xs:complexType>
								</xs:element>
							</xs:choice>
						</xs:complexType>
					</xs:element>
				</xs:sequence>
				<xs:attribute name="DisplayRoleNames" default="UserDefault">
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:enumeration value="UserDefault"/>
							<xs:enumeration value="Off"/>
							<xs:enumeration value="On"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:attribute>
				<xs:attribute name="ConstraintDisplayPosition" default="Top">
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:enumeration value="Top"/>
							<xs:enumeration value="Bottom"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:attribute>
				<xs:attribute name="DisplayOrientation" default="Horizontal">
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:enumeration value="Horizontal"/>
							<xs:enumeration value="VerticalRotatedRight"/>
							<xs:enumeration value="VerticalRotatedLeft"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:attribute>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="ReadingShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="Subject" type="SubjectRef"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="ValueConstraintShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="Subject" type="SubjectRef"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="RoleNameShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="Subject" type="SubjectRef"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="ExternalConstraintShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="Subject" type="SubjectRef"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="FrequencyConstraintShape">
		<xs:complexContent>
			<xs:extension base="ExternalConstraintShape"/>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="RingConstraintShape">
		<xs:complexContent>
			<xs:extension base="ExternalConstraintShape"/>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="ModelNoteShape">
		<xs:complexContent>
			<xs:extension base="Shape">
				<xs:sequence>
					<xs:element name="Subject" type="SubjectRef"/>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	<xs:complexType name="SubjectRef">
		<xs:attribute name="ref" type="xs:IDREF"/>
	</xs:complexType>
</xs:schema>